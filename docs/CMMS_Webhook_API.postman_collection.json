    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Auto-set date variables if not already set",
                    "const today = new Date();",
                    "const threeDaysAgo = new Date(today);",
                    "threeDaysAgo.setDate(today.getDate() - 3);",
                    "",
                    "// Format dates as YYYY-MM-DD",
                    "const formatDate = (date) => {",
                    "    return date.toISOString().split('T')[0];",
                    "};",
                    "",
                    "if (!pm.variables.get('START_DATE')) {",
                    "    pm.variables.set('START_DATE', formatDate(threeDaysAgo));",
                    "}",
                    "",
                    "if (!pm.variables.get('END_DATE')) {",
                    "    pm.variables.set('END_DATE', formatDate(today));",
                    "}"
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Common tests for all webhook requests",
                    "pm.test('Response time is acceptable', function () {",
                    "    pm.expect(pm.response.responseTime).to.be.below(3000);",
                    "});",
                    "",
                    "pm.test('Response has JSON content type', function () {",
                    "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
                    "});",
                    "",
                    "pm.test('Response has success field', function () {",
                    "    const jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('success');",
                    "});",
                    "",
                    "pm.test('Response has message field', function () {",
                    "    const jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('message');",
                    "});",
                    "",
                    "// Test for successful requests",
                    "if (pm.response.code === 200) {",
                    "    pm.test('Success response includes job_dispatched flag', function () {",
                    "        const jsonData = pm.response.json();",
                    "        pm.expect(jsonData.data).to.have.property('job_dispatched');",
                    "        pm.expect(jsonData.data.job_dispatched).to.be.true;",
                    "    });",
                    "}"
                ]
            }
        }
